<Window x:Class="Frustration.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frustration"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnNewGame" Content="New Game" HorizontalAlignment="Left" Margin="316,10,0,0" VerticalAlignment="Top" Width="75" Click="btnNewGame_Click"/>
        <TextBox x:Name="txtNoPlayers" HorizontalAlignment="Left" Height="23" Margin="170,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="2.132"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.428"/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="label" Content="No of Players" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="3.026,0.769" Margin="90,7,0,0"/>
        <ListBox x:Name="lbxPlayer1" HorizontalAlignment="Left" Height="52" Margin="170,43,0,0" VerticalAlignment="Top" Width="122"/>
        <ListBox x:Name="lbxPlayer2" HorizontalAlignment="Left" Height="52" Margin="170,100,0,0" VerticalAlignment="Top" Width="122"/>
        <ListBox x:Name="lbxPlayer3" HorizontalAlignment="Left" Height="61" Margin="170,157,0,0" VerticalAlignment="Top" Width="122"/>
        <ListBox x:Name="lbxPlayer4" HorizontalAlignment="Left" Height="55" Margin="170,234,0,0" VerticalAlignment="Top" Width="122"/>
        <Button x:Name="btnPlayerRoll1" Content="Roll" HorizontalAlignment="Left" Margin="90,74,0,0" VerticalAlignment="Top" Width="75" Click="btnPlayerRoll1_Click"/>
        <Label x:Name="lblPlayer1" Content="Player One" HorizontalAlignment="Left" Margin="98,43,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnMovePlayer1" Content="Move" HorizontalAlignment="Left" Margin="297,73,0,0" VerticalAlignment="Top" Width="75" Click="btnMovePlayer1_Click"/>

    </Grid>
</Window>
